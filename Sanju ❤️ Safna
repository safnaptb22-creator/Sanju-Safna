  <script>
    const overlay = document.getElementById("overlay");
    const openCoupon = document.getElementById("openCoupon");
    const closeCoupon = document.getElementById("closeCoupon");
    const copyCode = document.getElementById("copyCode");
    const couponCode = document.getElementById("couponCode");
    const kissBtn = document.getElementById("kissBtn");
    const kissText = document.getElementById("kissText");

    openCoupon.addEventListener("click", () => overlay.classList.add("show"));
    closeCoupon.addEventListener("click", () => overlay.classList.remove("show"));
    overlay.addEventListener("click", (e) => {
      if(e.target === overlay) overlay.classList.remove("show");
    });

    copyCode.addEventListener("click", async () => {
      try{
        await navigator.clipboard.writeText(couponCode.textContent.trim());
        copyCode.textContent = "âœ… Copied!";
        setTimeout(() => copyCode.textContent = "ğŸ“‹ Copy Code", 1500);
      }catch(err){
        alert("Copy not allowed on this device/browser. Please copy manually: " + couponCode.textContent);
      }
    });

    kissBtn.addEventListener("click", () => {
      const lines = [
        "ğŸ˜˜ Sending a kissâ€¦ delivered!",
        "ğŸ’‹ One kiss, two kissesâ€¦ many kisses!",
        "ğŸ«¶ Kiss + hug combo sent!",
        "ğŸŒ™ Kiss sent with a â€˜miss youâ€™ included!",
      ];
      const pick = lines[Math.floor(Math.random()*lines.length)];
      kissText.textContent = pick;
      kissText.style.transform = "scale(1.02)";
      setTimeout(()=>kissText.style.transform="scale(1)", 180);
    });

    // Optional: change coupon code based on date
    // couponCode.textContent = "SANJU-" + new Date().getFullYear();
